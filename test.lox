class Bagel {
  init(flavour) {
    this.flavour = flavour;
    this.plate = "small plate";
  }

  describe() {
    print "A " + this.flavour + " bagel with " + this.topping + " on top, served on a " + this.plate + ".";
  }
}
var bagel = Bagel("sesame");
bagel.topping = "cream cheese";
bagel.describe();
bagel.plate = "grand platter";
bagel.flavour = "cinnamon";
bagel.describe();

