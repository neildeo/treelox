class Cake {
  taste(adjective) {
    print "The " + this.flavour + " cake is " + adjective + "!";
  }
}

var cake = Cake();
cake.flavour = "Victoria sponge";
cake.taste("delicious");
cake.flavour = "chocolate";
cake.taste("delicious");
cake.flavour = "prepackaged presliced Madeira";
cake.taste("even more delicious");

